{
  "name": "latex-editor",
  "version": "0.1.0",
  "engines": {
    "node": ">=24"
  },
  "files": [
    "dist"
  ],
  "private": true,
  "type": "module",
  "main": "./dist/latex-editor.js",
  "module": "./dist/latex-editor.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/latex-editor.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/latex-editor.css"
  },
  "scripts": {
    "dev": "vite --port 6001",
    "build": "tsgo && vite build",
    "preview": "vite preview",
    "check": "tsgo --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "download-engine": "bash scripts/download-engine.sh",
    "build:lib": "BUILD_MODE=lib vite build",
    "prepare": "npm run build:lib"
  },
  "peerDependencies": {
    "monaco-editor": "^0.55.1",
    "pdfjs-dist": "^5.4.624"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@playwright/test": "^1.58.2",
    "@typescript/native-preview": "^7.0.0-dev.20260219.1",
    "jscpd": "^4.0.8",
    "lefthook": "^2.1.1",
    "monaco-editor": "^0.55.1",
    "pdfjs-dist": "^5.4.624",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  }
